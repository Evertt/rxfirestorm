{
  "compilerOptions": {
    "lib": [
      "DOM",
      "ES2017",
    ],
    "target": "es2015",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "importsNotUsedAsValues": "error",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "strict": true,
    "declaration": true,
    "outDir": "dist",
  },
  "include": [
    "src",
  ],
  "exclude": [
    "dist",
    "node_modules",
  ],
}