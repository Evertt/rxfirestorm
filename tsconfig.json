{
  "compilerOptions": {
    "lib": ["DOM"],
    "target": "es2017",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "importsNotUsedAsValues": "error",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "strict": true,
    "declaration": true,
    "outDir": "dist/esm",
  },
  "include": [
    "src",
  ],
  "exclude": [
    "dist",
    "node_modules",
  ],
}